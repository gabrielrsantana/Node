<%- include('../partials/header'); %>

    <section class="container">
        <div class="row">
            <div class="col">
                <div class="row mt-5">
                    <div class="col-6">
                        <h1>Lista Produtos</h1>
                    </div>
                    <div class="col-6">
                        <a class="btn btn-primary" href="/cadastrarProdutos">inserir produto</a>
                    </div>
                </div>
                <!-- campo para pesquisa -->
                <div id="toolbar">
                    <input id="pesquisa_input" type="text" name="pesquisa">
                    <button type="button" id="botao_pesquisa" class="btn btn-large bg-warning">Pesquisa</button>
                </div>
                <!-- fim campo para pesquisa -->
                <table id="table" class="table table-hover" data-toggle="table" data-toolbar="#toolbar"
                    data-height="400" data-url="json/data1.json">
                    <thead>
                        <tr>
                            <th data-field="nome">nome</th>
                            <th>valor</th>
                            <th>codigo Barra</th>
                        </tr>
                    </thead>
                    <!-- produtos,escreve igual ao model -->
                    <tbody>
                        <% if(resultado =='' ){%>
                            <tr>
                                <td class="bg-warning text-center" colspan="3">Sem produtos</td>
                            </tr>
                            <% } %>
                                <% resultado.forEach(function(produto){ %>
                                    <tr>
                                        <td>
                                            <%= produto.nome%>
                                        </td>
                                        <td>
                                            <%= produto.vlUnit%>
                                        </td>
                                        <td>
                                            <%= produto.codigoBarras%>
                                        </td>
                                        <td style="width:5%"><a class="btn btn-danger"
                                                href="/deletarproduto/<%=produto._id%>">Deletar</a></td>
                                        <td style="width:5%"><a class="btn btn-warning"
                                                href="/editarProduto/<%=produto._id%>">Editar</a></td>
                                    </tr>
                                    <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>
    <%- include('../partials/footer'); %>