<%- include('../partials/header'); %>
<div class="container mt-5 shadow rounded" style="background-color: rgba(233, 202, 162, 0.904);">
    <div class="row">
        <div class="col">
            <h1 class="mt-5 mb-3 text-center">Cadastrar USUARIO</h1>
            <form action="/livros/cadastrarUsuario" method="POST">
                <div class="form-group">
                    <label for="nome">email</label>
                    <input class="form-control" type="email" id="email" name="email" placeholder="email de cadastro">
                    <small class="text-muted">Email para login do sistema</small>
                </div>
               <div class="form-group">
                    <label for="senha">senha</label>
                    <input class="form-control" type="text" id="senha" name="senha"
                        placeholder="insira senha">
               </div>
                <div class="form-group">
                    <label for="tipo">Tipo</label>
                    <input class="form-control" type="text" id="tipo" name="tipo"
                        placeholder="tipo de permissao">
                        <small>usuario = comum</small>
                        <small>admin = administrador</small>
                </div>
                <button class="btn btn-primary mb-5" type="submit">Enviar</button>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>